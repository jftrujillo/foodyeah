<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/portada"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <ImageView
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/template_mask"/>
    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/portada"
        android:textSize="30sp"
        />
    <ImageView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffa09c"
        android:layout_below="@id/portada"
        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/divider"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Direccion"
        android:layout_below="@id/divider"
        android:layout_toRightOf="@id/logo"
        android:padding="8dp"

        />
    <TextView
        android:id="@+id/direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calle 55"
        android:textColor="#ad000000"
        android:layout_below="@id/dir"
        android:layout_toRightOf="@id/logo"
        android:padding="8dp"

        />
    <TextView
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="Telefono"
        android:layout_below="@id/direccion"
        android:layout_toRightOf="@+id/logo"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ad000000"
        android:text="823111"
        android:layout_below="@id/tel"
        android:layout_toRightOf="@id/logo"
        android:padding="8dp"
        />
    <TextView
        android:id="@+id/plat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Platos a probar"
        android:textSize="20sp"
        android:textColor="#fff3252a"
        android:layout_below="@id/logo"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/platos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ad000000"
        android:text="empanadas, tamal"
        android:layout_below="@id/plat"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="20sp"
        android:textColor="#fff3252a"
        android:layout_below="@id/platos"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ad000000"
        android:text="holi"
        android:layout_below="@id/des"
        android:padding="8dp"
        />






</RelativeLayout>