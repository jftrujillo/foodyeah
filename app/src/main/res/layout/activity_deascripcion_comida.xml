<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jhonfredy.foodyeah.DeascripcionComida">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/portada"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/mask"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/template_mask"
                />
            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/portada"
                android:text="nombre"
                android:textSize="30sp"
                android:textColor="#ffffff"
                />

            <TextView
                android:id="@+id/endetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En detalle"
                android:textSize="20sp"
                android:textColor="#fff3252a"
                android:layout_below="@id/nombre"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/endetalle"
                android:text="descripcion"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/donde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff3252a"
                android:text="Donde lo como?"
                android:layout_below="@id/descripcion"
                android:textSize="20sp"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/restaurantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Restaurantes"
                android:textSize="20sp"
                android:layout_below="@id/donde"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/ingre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ingredientes"
                android:textSize="20sp"
                android:textColor="#fff3252a"
                android:layout_below="@id/restaurantes"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/ingredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ingredientes"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/ingre"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/prepa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff3252a"
                android:text="Preparacion"
                android:textSize="20sp"
                android:layout_below="@id/ingredientes"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/preparacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preparacion"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/prepa"
                android:padding="8dp"
                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
