<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/portada"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/mask"
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:background="@drawable/template_mask" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/portada"
        android:text="nombre"
        android:textSize="30sp"
        android:textColor="#ffffff"
        />
    <ScrollView
        android:layout_toRightOf="@id/portada"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <TextView
                android:id="@+id/endetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En detalle"
                android:textSize="20sp"
                android:textColor="#fff3252a"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"

                android:layout_below="@id/endetalle"
                android:text="descripcion"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/donde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff3252a"
                android:text="Donde lo como?"
                android:layout_below="@id/descripcion"

                android:textSize="20sp"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/restaurantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="restaurantes"

                android:textSize="20sp"
                android:layout_below="@id/donde"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/ingre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ingredientes"
                android:textSize="20sp"
                android:textColor="#fff3252a"
                android:layout_below="@id/restaurantes"
                android:padding="8dp"
                />
            <TextView
                android:id="@+id/ingredientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ingredientes"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/ingre"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/prepa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff3252a"
                android:text="Preparacion"
                android:textSize="20sp"
                android:layout_below="@id/ingredientes"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/preparacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preparacion"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@id/prepa"
                android:padding="8dp"
                />




        </RelativeLayout>

    </ScrollView>

</RelativeLayout>